{
	"manifest_version": 2,

	"name": "Pomodoro Timer",
	"description": "A Google Chrome Extension using the Pomodoro Technique",
	"version": "1.0",
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Pomodoro Timer",
		"default_popup": "timer.html"
	},
	"background": {
		"scripts": ["moment.js"],
		"persistent": false
	},
	"permissions": [
		"notifications"
	]
}
